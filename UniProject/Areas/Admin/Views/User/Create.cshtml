@model User
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container">
    <h2>تعریف کاربر جدید</h2>
    @using (Html.BeginForm("Create", "User", FormMethod.Post, new { area = "Admin", @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">نام :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">نام خانوادگی :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">نام کاربری :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">رمز عبور :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">تکرار رمز عبور :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", type = "password" })

            </div>
        </div>





        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">ثبت</button>
            </div>
        </div>
    }

</div>

