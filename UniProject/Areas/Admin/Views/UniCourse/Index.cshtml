@model IEnumerable<Course>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<table class="table table-bordered table-responsive table-hover table-striped">
    <thead>
        <tr>
            <th>عنوان دوره</th>
            <th>طول دوره</th>
            <th>زمان برگزاری</th>
            <th>تاریخ شروع دوره</th>
            <th>شهریه</th>
            <th>مدرس</th>
            <th>وضعیت ثبت نام</th>

            <th class="sub"></th>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Duration</td>
                    <td>@item.ClassTime</td>
                    <td>@item.StartDate</td>
                    <td>@(item.Price > 0 ? item.Price.ToString("N0") : "رایگان")</td>
                    <td>@item.Teacher.FirstName @item.Teacher.LastName</td>
                    <td>@item.Status.GetDescription()</td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
                        @*@Html.ActionLink("جزییات", "Details", new { id = item.Id }) |
                        @Html.ActionLink("حذف", "Delete", new { id = item.Id })*@
                    </td>

                </tr>
            }
        }

    </tbody>
</table>
<div class="col-md-12">
    <a href="@Url.Action("Create","UniCourse",new {area="Admin"})" class="btn btn-info btn-sm">ایجاد دوره جدید</a>
</div>

