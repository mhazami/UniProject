@model Course
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container">
    <h2>تعریف دوره جدید</h2>
    @using (Html.BeginForm("Create", "UniCourse", FormMethod.Post, new { area = "Admin", @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">عنوان دوره :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            </div>
        </div>
       
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">طول دوره :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Duration, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">زمان برگزاری :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.ClassTime, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">زمان شروع دوره :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">شهریه :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">ظرفیت :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Capacity, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">وضعیت :</label>
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(model => model.Status, new { @class = "form-control" })

            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-2" for="email">گروه درسی :</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.Category, "", new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">مدرس :</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.TeacherId, (SelectList)ViewBag.Teacher, "", new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">توضیحات :</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control editor" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">ثبت</button>
            </div>
        </div>
    }

</div>

