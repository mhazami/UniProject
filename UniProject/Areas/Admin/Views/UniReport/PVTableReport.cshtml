@model IEnumerable<CourseStudent>

<table class="table table-bordered table-responsive table-hover table-striped">
    <thead>
        <tr>
            <th>ردیف</th>
            <th>نام دانشجو</th>
            <th>شماره دانشجویی</th>
            <th>کد ملی</th>
            <th>تاریخ تولد</th>
            <th>عنوان دوره</th>
            <th></th>



        </tr>
    </thead>
    <tbody>
        @{
            int row = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td> @(row++)</td>
                    <td>@item.Student.FirstName @item.Student.LastName</td>
                    <td>@item.Student.StudentNumber</td>
                    <td>@item.Student.NationalCode</td>
                    <td>@item.Student.BirthDate</td>
                    <td>@item.Course.Title</td>
                    <td>
                        <a onclick="return confirm('آیا از حذف این دانشجو از این دوره اطمینان دارید؟')" href="/Admin/UniReport/Delete?stId=@item.StudentId&coId=@item.CourseId" class="btn btn-danger btn-xs">
                            حذف
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </td>


                </tr>
            }
        }

    </tbody>
</table>
