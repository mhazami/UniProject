
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    td, th {
        text-align: center;
        padding: 0 !important;
        padding: 5px 0 5px 0;
    }
</style>
<script>
    $(function () {
        $('#drpCourse').on('change', function () {
            var id = $(this).val();
            $.get('/Course/GetCourse', { id: id }, function (data) {
                $('#table-course').html('');
                $('#div-des').html('');
                $('#table-course').html(data);
            })
        })
    })
    function showDes(id) {
        $.get('/Course/GetDes', { id: id }, function (data) {
            $('#div-des').html('');
            $('#div-des').html(data);
        })
    }
</script>
<div class="banner-w3agile">
    <div class="container">
        <h3><a href="#">صفحه اصلی</a> / <span>دوره ها</span></h3>
    </div>
</div>
<div class="serach-w3agile">
    <div class="container">
        <h3 class="tittle2">دوره های جستجو</h3>
        <div class="place-grids">
            <div class="col-md-6 place-grid">
                @Html.DropDownList("drpCourse", (SelectList)ViewBag.Course, "انتخاب کنید ---", new { @class = "sel" })
            </div>

            @*<div class="col-md-4 place-grid">
